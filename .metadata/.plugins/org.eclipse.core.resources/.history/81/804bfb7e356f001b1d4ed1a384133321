package co.com.java.service.impl;

import java.util.List;

import javax.ejb.EJB;
import javax.enterprise.context.ApplicationScoped;
import javax.inject.Named;

import co.com.dao.ProductoDAO;
import co.com.java.service.ProductoService;
import co.com.model.Producto;
import co.com.util.StoreException;

/**
 * <b> Permite implementar metodos de la tabla producto. </b>
 * 
 * @author Paul Jimenez
 * @version 1.0,14/02/2021
 * @since JDK 1.8
 */
@Named
@ApplicationScoped
public class ProductoServiceImpl implements ProductoService {
	
	@EJB
	private ProductoDAO productoDao;

	@Override
	public List<Producto> consultarProductos() throws StoreException {
		return productoDao.findAll();
	}

}
